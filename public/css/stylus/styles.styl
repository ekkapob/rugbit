black = #434343
grey	= #7A7A7A
site-background = #ECEBF7
lightgrey = #CCC
lightgrey-100 = #EFEFEF
purple = #415ADA
darkpurple = #8491E4
gold = #F9D829
lightpurple = #D1D7FF

.navbar a
	color black

.navbar
	background	white
	height	50px
	border-radius	0
	box-shadow	0px 0px 5px rgba(0, 0, 0, 0.3)
	margin-bottom 0px
	
.navbar-brand
	font-family	Arial
	font-weight	bold

.navbar-nav
	font-family Arial Narrow

.nav>li>a:hover
.nav>li>a:focus
	background-color transparent
	color grey

.nav-menu-selected:after
	content	 ""
	border-top 2px solid #434343
	height 2px
	display block
	top -3px
	width 75%
	position relative
	margin 0 auto
	border-top-left-radius 2px
	border-top-right-radius 2px

.container-main
	background-color white
	padding-top	40px

.media-left
	padding-right	0

.post
	position relative
	.post-bubble
		.icon-speech.shadow
			left -41px
			color rgba(171,171,171,0.25)
			top -12px
			font-size 49px
		.icon-speech
			color white
			font-size: 48px
			position: absolute
			top: -14px
			left: -40px
		.post-comment-icon
			font-size 22px
			color darkpurple
			position absolute
			top 13px
			left 12px
	.post-img-container
		width 70px
		height 70px
		overflow hidden
		img
			width 100%
	.post-heading
		font-size 24px
	.media-heading
		position relative
	 	a
	 		cursor
			color black
			text-decoration none
			&:hover
				color purple
	.media-body
		padding-left 20px
	.post-date
		&:before
			content: '\2014 \00A0'
		color lightgrey
		font-size 12px
		font-weight normal
	.post-author-container
		font-style italic
		.post-author a
			color purple
			text-decoration underline
		span
			font-size 12px
	.post-tag
		background-color lightgrey-100
		color black
		font-size 10px
	p
		margin-top 10px
	.post-pay
		display inline
		font-size 14px
		position absolute
		right 0
		bottom 0
		font-weight normal
		.icon-stack
			color gold
		
body
	background-color site-background


@media (min-width 768px) 
	.navbar-nav>li
		margin 0 5px

