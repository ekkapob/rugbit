black = #434343
grey	= #7A7A7A
site-background = #ECEBF7
lightgrey = #CCC
purple = #415ADA

.navbar a
	color black

.navbar
	background	white
	height	50px
	border-radius	0
	box-shadow	0px 0px 5px rgba(0, 0, 0, 0.3)
	margin-bottom 0px
	
.navbar-brand
	font-family	Arial
	font-weight	bold

.navbar-nav
	font-family Arial Narrow

.nav>li>a:hover
.nav>li>a:focus
	background-color transparent
	color grey

.nav-menu-selected:after
	content	 ""
	border-top 2px solid #434343
	height 2px
	display block
	top -3px
	width 75%
	position relative
	margin 0 auto
	border-top-left-radius 2px
	border-top-right-radius 2px

.container-main
	background-color white
	padding-top	40px
	// height 200px

.media-left
	padding-right	0

.post
	.media-heading
	 	a
			color black
			text-decoration none
		span
			font-size 12px
			font-weight normal
	.media-body
		padding-left 20px
	.post-date
		&:before
			content: '\2014 \00A0';
		color lightgrey
	.post-author-container
		font-style italic
		.post-author a
			color purple
			text-decoration underline
			
			

.post-img-container
	width 70px
	height 70px
	overflow hidden
	img
		width 100%
		
body
	background-color site-background


@media (min-width 768px) 
	.navbar-nav>li
		margin 0 5px

